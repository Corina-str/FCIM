@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles ="Admin")]

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FCIM</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="person" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Cazare
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="educard" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> EduCard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="message" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Mesaj anonim
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin">
        <Authorized>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="persons" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Cazarea studentilor
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="educards" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> EduCard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="messages" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Mesajele anonime
            </NavLink>
        </div>
        </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
